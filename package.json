{
  "name": "electron_test_work",
  "version": "1.0.0",
  "description": "test work",
  "main": "./app/main.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist-win": "electron-builder -w",
    "dist-linux": "electron-builder -l",
    "start": "electron ."
  },
  "files": [
    "app/**/*"
  ],
  "build": {
    "appId": "org.jbestie.app",
    "win": {
      "artifactName": "app.exe",
      "target": "nsis",
      "signAndEditExecutable": true
    },
    "linux": {
      "artifactName": "App.bin",
      "target": "AppImage"
    }
  },
  "author": "Oleksii Smahin",
  "license": "ISC",
  "dependencies": {
    "jks-js": "^1.0.0",
    "node-forge": "^0.10.0"
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^22.7.0",
    "electron-packager": "^15.2.0"
  }
}
